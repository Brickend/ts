{
  "name": "@brickend/cli",
  "version": "0.1.0",
  "type": "module",
  "description": "CLI tool for scaffolding Brickend packages in monorepos",
  "main": "dist/index.js",
  "bin": {
    "brickend": "./bin/brickend.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dev": "bun run src/index.ts",
    "lint": "eslint . --max-warnings 0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "@inquirer/prompts": "^7.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20",
    "bun": ">=1.3.0"
  },
  "keywords": [
    "brickend",
    "cli",
    "monorepo",
    "scaffolding"
  ]
}

